<resources>

    <style name="Theme.Carddemo" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_carddemo</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Carddemo</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Carddemo</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Carddemo</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Carddemo</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Carddemo</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_carddemo</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_carddemo</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Carddemo</item>
    </style>

    <style name="ActionBar.Solid.Carddemo" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_carddemo</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_carddemo</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_carddemo</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Carddemo</item>
    </style>

    <style name="ActionBar.Transparent.Carddemo" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_carddemo</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Carddemo</item>
    </style>

    <style name="PopupMenu.Carddemo" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_carddemo</item>
    </style>

    <style name="DropDownListView.Carddemo" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_carddemo</item>
    </style>

    <style name="ActionBarTabStyle.Carddemo" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_carddemo</item>
    </style>

    <style name="DropDownNav.Carddemo" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_carddemo</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_carddemo</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_carddemo</item>
    </style>

    <style name="ProgressBar.Carddemo" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_carddemo</item>
    </style>

    <style name="ActionButton.CloseMode.Carddemo" parent="@android:style/Widget.Holo.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_carddemo</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Carddemo.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Carddemo</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Carddemo</item>
    </style>

    <!-- Other Button in Header -->
    <style name="card.header_button_base.other">
        <item name="android:background">@drawable/card_menu_button_other</item>
    </style>

    <!-- Button Base in Header on the left -->
    <style name="card.header_button_base.left">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:paddingLeft">@dimen/card_header_button_padding_left</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!-- Button Overflow in Header -->
    <style name="card.header_button_base.left.overflow">
        <item name="android:background">@drawable/card_menu_button_overflow</item>
    </style>

    <!-- Button to Expand/Collapse in Header -->
    <style name="card.header_button_base.left.expand">
        <item name="android:background">@drawable/card_menu_button_expand</item>
    </style>

    <!-- Other Button in Header -->
    <style name="card.header_button_base.left.other">
        <item name="android:background">@drawable/card_menu_button_other</item>
    </style>

    <!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->


    <!-- Customize Shadow -->
    <!-- Style for shadow image -->
    <!--
    <style name="card.shadow_image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">5dp</item>
        <item name="android:src">@drawable/democard_my_shadow</item>
        <item name="android:layout_below">@+id/card_main_content_layout</item>
    </style>
    -->

    <style name="card.shadow_my_image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:src">@drawable/democard_my_shadow</item>
        <item name="android:layout_below">@+id/card_main_content_layout</item>
    </style>

    <!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->


    <!-- Myapps style -->

    <style name="carddemo_myapps_main_inner_ratingbar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/ratingbar_small_holo_dark</item>
        <item name="android:indeterminateDrawable">@drawable/ratingbar_small_holo_dark</item>
        <item name="android:minHeight">12dip</item>
        <item name="android:maxHeight">12dip</item>
        <item name="android:thumb">@null</item>
        <item name="android:isIndicator">true</item>
    </style>

    <style name="carddemo_myapps_main_inner_secondarytitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="carddemo_myapps_main_inner_title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>

    <!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->

    <style name="carddemo_googlenow_main_inner_lastupdate">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:layout_marginLeft">@dimen/card_header_simple_title_margin_left</item>
    </style>

    <style name="Birth.card.content_outer_layout" parent="@style/card.content_outer_layout">

        <!-- Style for Content View -->
        <item name="android:minHeight">60dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/card_content_outer_view_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/card_content_outer_view_margin_bottom</item>
        <item name="android:layout_marginLeft">@dimen/card_content_outer_view_margin_left</item>
        <item name="android:layout_marginRight">@dimen/card_content_outer_view_margin_right</item>
    </style>

    <style name="Now"></style>

    <style name="Now.card_expand_inner_layout">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Now.card_expand_inner_layout.light_gray">
        <item name="android:background">#515254</item>
        <item name="android:textColor">#B3B2B2</item>
    </style>

    <style name="Now.card_expand_inner_layout.light_gray.bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Now.card_expand_inner_layout.dark">
        <item name="android:background">#4A4B4D</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="Now.card_expand_inner_layout.dark.bold" parent="@style/Now.card_expand_inner_layout.dark">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- You may know card -->
    <style name="carddemo_mayknow_main_inner_title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginLeft">@dimen/card_header_simple_title_margin_left</item>
    </style>

    <style name="carddemo_mayknow_main_inner_title.sub">
        <item name="android:textSize">1sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <!-- Suggested community -->

    <style name="carddemo_suggested_header_text"></style>

    <style name="carddemo_suggested_text">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#D0D0D0</item>
    </style>

    <style name="carddemo_suggested_text_bold">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="carddemo_suggested_text_bold1">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Expand inside -->
    <style name="card.main_layout_expandinside" parent="card.main_layout">
        <item name="android:background">@drawable/card_background</item>
    </style>

    <!-- Dismiss Animation -->
    <style name="card.dismiss_name">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:layout_marginTop">@dimen/card_main_simple_title_margin_top</item>
    </style>

</resources>